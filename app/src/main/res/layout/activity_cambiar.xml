<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar"
        android:textSize="24sp"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/et_id_cambiar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID" />

    <Spinner
        android:id="@+id/sp_nuevo_origen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Spinner
        android:id="@+id/sp_nuevo_destino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_nueva_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nueva Fecha" />

    <Button
        android:id="@+id/btn_nueva_hora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nueva Hora" />

    <Button
        android:id="@+id/btn_actualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar" />

    <Button
        android:id="@+id/btn_regresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regresar al MenÃº" />
</LinearLayout>
