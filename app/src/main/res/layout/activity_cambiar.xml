<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo3"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cambiar Reserva"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID de la Reserva"
        android:textColor="@color/black"
        android:textColorHint="#4E4848"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Buscar"
        android:backgroundTint="#22c55e"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />

    <Spinner
        android:id="@+id/sp_origen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/sp_destino"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" />

    <EditText
        android:id="@+id/et_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Fecha"
        android:focusable="false"
        android:textColor="@color/black"
        android:textColorHint="#4E4848"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Fecha"
        android:backgroundTint="#22c55e"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/et_hora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Hora"
        android:focusable="false"
        android:textColor="@color/black"
        android:textColorHint="#4E4848"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_hora"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Seleccionar Hora"
        android:backgroundTint="#22c55e"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />

    <Button
        android:id="@+id/btn_actualizar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Actualizar"
        android:backgroundTint="#22c55e"
        android:textColor="@color/white"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/btn_regresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Regresar al MenÃº"
        android:backgroundTint="#f59e0b"
        android:textColor="@color/white"
        android:layout_marginTop="8dp" />
</LinearLayout>
