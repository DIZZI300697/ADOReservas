<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/fondo3"
    tools:context=".CancelarActivity">

    <EditText
        android:id="@+id/et_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID de la reserva"
        android:textColor="@color/black"
        android:textColorHint="#4E4848"
        android:inputType="number" />

    <Button
        android:id="@+id/btn_buscar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#22c55e"
        android:textColor="@color/white"
        android:text="Buscar Reserva" />

    <TextView
        android:id="@+id/tv_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detalles de la reserva"
        android:padding="16dp"
        android:textSize="16sp"
        android:visibility="gone" />

    <Button
        android:id="@+id/btn_cancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#22c55e"
        android:textColor="@color/white"
        android:text="Cancelar Reserva" />

    <Button
        android:id="@+id/btn_regresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#f59e0b"
        android:textColor="@color/white"
        android:text="Regresar al MenÃº" />
</LinearLayout>
