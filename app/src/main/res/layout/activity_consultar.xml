<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/fondo3"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consultar"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal" />

    <EditText
        android:id="@+id/et_id_consultar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textColorHint="#4E4848"
        android:hint="ID" />

    <Button
        android:id="@+id/btn_consultar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#22c55e"
        android:textColor="@color/white"
        android:text="Consultar" />

    <Button
        android:id="@+id/btn_consultar_todo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#22c55e"
        android:textColor="@color/white"
        android:text="Consultar Todo" />

    <TextView
        android:id="@+id/tv_resultados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:padding="16dp" />

    <Button
        android:id="@+id/btn_regresar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#f59e0b"
        android:textColor="@color/white"
        android:text="Regresar al MenÃº" />
</LinearLayout>
